<%- include("partials/header") %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/paymentCss/style.css">

    </head>

    <body>
        <!-- Button trigger modal -->
        <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Launch demo modal
        </button> -->

        <!-- Modal -->
        <div class="paymentmodal fade show d-block" id="paymentmodal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ödeme Bilgileri</h5>
                        
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary close">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="payment-step-by-step" class="m-auto pt-5">
            <div class="card col-12 col-sm-10 col-md-6 col-lg-6 m-auto">
                <div class="card-title">
                    <!-- Circles which indicates the steps of the form: -->
                    <div style="text-align:center;margin-top:60px;">
                        <span class="step"><i class="fa-regular fa-user fa-3x"></i></span>
                        <span class="step"><i class="fa-solid fa-cash-register fa-3x"></i></span>
                        <span class="step"><i class="fa-regular fa-file-lines fa-3x"></i></span>
                        <span class="step"><i class="fa-regular fa-credit-card fa-3x"></i></span>
                    </div>
                </div>
                <div class="card-body">
                    <form id="paymentForm">
                        <h6 class="my-2 text-center"><%= pricingPlans _%></h6>
                        <!-- One "tab" for each step in the form: -->
                        <div class="tab">
                            <h6 class="card-subtitle mb-2">Firma Bilgileri</h6>
                            <p><input placeholder="First name..." oninput="this.className = ''"></p>
                            <p><input placeholder="Last name..." oninput="this.className = ''" name="lname"></p>
                        </div>
                        <div class="tab">Ödeme Bilgileri
                            <p><input placeholder="E-mail..." oninput="this.className = ''" name="email"></p>
                            <p><input placeholder="Phone..." oninput="this.className = ''" name="phone"></p>
                        </div>
                        <div class="tab">Fatura Bilgileri
                            <p><input placeholder="dd" oninput="this.className = ''" name="dd"></p>
                            <p><input placeholder="mm" oninput="this.className = ''" name="nn"></p>
                            <p><input placeholder="yyyy" oninput="this.className = ''" name="yyyy"></p>
                        </div>
                        <div class="tab">Satın Alma Yöntemi
                            <p><input placeholder="Username..." oninput="this.className = ''" name="uname"></p>
                            <p><input placeholder="Password..." oninput="this.className = ''" name="pword"
                                    type="password"></p>
                        </div>
                        <div style="overflow:auto;">
                            <div style="float:right;">
                                <button type="button" id="prevBtn" onclick="nextPrev(-1)">Önceki</button>
                                <button type="button" id="nextBtn" onclick="nextPrev(1)">Sonraki</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>



    </body>
    
    
    <%- include("partials/footer") %>
    <script src="/assets/js/paymentJs/payment.js"></script>
    </html>